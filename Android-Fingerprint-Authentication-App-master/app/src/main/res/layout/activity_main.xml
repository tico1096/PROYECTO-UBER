<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/header"
        android:orientation="vertical"
        android:background="@menu/header">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/headingLabel"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="center"
            android:text=" Autenticación de Huella"
            android:textColor="@android:color/white"
            android:textSize="45dp"
            android:textStyle="bold" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="414dp"
        android:layout_below="@id/header"
        android:layout_marginTop="110dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="15dp">
        <ImageView
            android:id="@+id/fingerprintImage"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_below="@+id/headingLabel"
            android:layout_centerHorizontal="true"
            app:srcCompat="@mipmap/ic_launcher_copia" />

        <TextView
            android:id="@+id/paraLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fingerprintImage"
            android:layout_centerHorizontal="true"
            android:padding="35dp"
            android:textSize="15dp"
            android:text="Proceda a registrar su huella digital"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/paraLabel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fingerprintImage"
            android:layout_centerHorizontal="true"
            android:padding="35dp"
            android:textSize="25dp"
            android:background="@drawable/boton_redondo"
            android:textColor="@android:color/white"
            android:text="Nicolás Tovar - Carlos Mican - Hair Gomez"
            android:textAlignment="center" />

    </LinearLayout>
</RelativeLayout>